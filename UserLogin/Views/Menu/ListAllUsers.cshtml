@model IEnumerable<UserLogin.Models.Users>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListAllUsers</title>
    <style>
        h1 {
            background-color: #006080;
            color: white;
            width: 100%;
            font-family: "Courier New";
            text-align: center;
            height: 60px;
        }

        body {
            background: #ccf3ff;
        }
    </style>
</head>
<body>
    <h1>List All Users</h1>
    <a href="@Url.Action("IndexRole", "Home")">BACK</a>
    <table class="table">
        <tr>
            <th>
                Username
            </th>
            <th>
                Password
            </th>
            <th>
                Faculty Number
            </th>
            <th>
                Role
            </th>
            <th>
                Date created
            </th>
            <th>
                Active date
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pass)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.facNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.active)
                </td>

            </tr>
        }

    </table>
</body>
</html>
